{
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"target": "ES2020",
		"module": "ES2020",
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"strict": false,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"]
		},
		"outDir": "./dist",
		"noEmit": true,
		"resolveJsonModule": true,
		"incremental": true,
		"tsBuildInfoFile": "./.tsbuildinfo",
		"typeRoots": ["./utils/theme/custom.d.ts"],
		"allowJs": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"strictNullChecks": false
	},
	"exclude": ["node_modules"],
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".forestry/types.ts",
		".forestry/config.ts",
		".next/types/**/*.ts"
	]
}
